<Window x:Class="Stat_talon.add_SMO"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stat_talon"
        mc:Ignorable="d"
        Title="Добавление СМО" Height="571" Width="1010" Background="#FF00082C" FontSize="24" Loaded="Window_Loaded" FontFamily="Times New Roman" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="textbox_smo_name" HorizontalAlignment="Left" TabIndex="9" Margin="198,57,0,416" TextWrapping="Wrap"   Text="" Width="629" FontSize="36"/>
        <TextBlock HorizontalAlignment="Left" Margin="1,149,0,352" TextWrapping="Wrap" Text=" Страховая мед. организация основной государственный регистрационный номер(ОГРН) " Width="998" FontSize="26" Foreground="White" VerticalAlignment="Center" Height="41"/>
        <TextBox x:Name="textbox_smo_ogrn" HorizontalAlignment="Left" TabIndex="9" Margin="198,210,0,263" TextWrapping="Wrap"  Text="" Width="629" FontSize="36" TextChanged="textbox_smo_ogrn_TextChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="281,10,0,485" TextWrapping="Wrap" Text=" Страховая мед. организация наименование " Width="510" FontSize="26" Foreground="White" VerticalAlignment="Center" Height="47"/>
        <TextBox x:Name="textbox_smo_adres" HorizontalAlignment="Left" TabIndex="9" Margin="10,339,0,101" TextWrapping="Wrap"  Text="" Width="970" FontSize="36"/>
        <TextBlock HorizontalAlignment="Left" Margin="323,299,0,203" TextWrapping="Wrap" Text=" Адрес страховой мед. организации " Width="408" FontSize="26" Foreground="White" VerticalAlignment="Center" Height="40"/>
        <Button Content="Добавить" HorizontalAlignment="Left" x:Name="button_add" Margin="198,461,0,19" Width="184" FontSize="26" Background="Black" Foreground="White" BorderBrush="White" Click="button_add_Click"/>
        <Button Content="Отменить" HorizontalAlignment="Left" x:Name="button_add_Copy" Margin="643,461,0,19" Width="184" FontSize="26" Background="Black" Foreground="White" BorderBrush="White" Click="button_add_Copy_Click"/>
        <CheckBox Name="checkbox_dms" Content="Для ДМС" HorizontalAlignment="Left" Margin="9,67,0,0" VerticalAlignment="Top" Background="White" Foreground="White" BorderBrush="White" FontSize="36"/>
        <CheckBox Name="checkbox_oms" Content="Для ОМС" HorizontalAlignment="Left" Margin="9,13,0,0" VerticalAlignment="Top" Background="White" Foreground="White" BorderBrush="White" FontSize="36"/>
    </Grid>
</Window>
